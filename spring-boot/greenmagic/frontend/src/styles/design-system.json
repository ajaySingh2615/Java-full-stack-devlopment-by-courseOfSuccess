    "bestPractices": [
      "Always use consistent spacing (mb-8 for sections, p-6 for cards)",
      "Use semantic color classes (green for success, red for error, yellow for warning)",
      "Include hover states for interactive elements",
      "Use proper text hierarchy (text-3xl for titles, text-xl for sections)",
      "Maintain consistent border radius (rounded-lg)",
      "Use subtle shadows (shadow-sm) for depth",
      "Include responsive classes (md:, lg:) for mobile-first design",
      "Use flex and grid for layouts instead of custom CSS",
      "Keep icon sizes consistent within sections",
      "Use proper contrast ratios for accessibility",
      "Group related elements with consistent spacing",
      "Use transition-colors for smooth hover effects",
      "Maintain consistent padding (p-6 for cards, p-4 for smaller elements)",
      "Use whitespace effectively with space-y-* classes",
      "Keep color palette consistent across components"
    ],

    "quickReference": {
      "commonPatterns": {
        "pageWrapper": "min-h-screen bg-gray-50 py-8",
