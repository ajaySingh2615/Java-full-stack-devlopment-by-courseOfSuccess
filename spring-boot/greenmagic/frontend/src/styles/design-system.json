        "badge": "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium"
      },
      "iconSizes": {
        "small": "h-4 w-4",
        "medium": "h-5 w-5", 
        "large": "h-6 w-6"
      },
      "textSizes": {
        "title": "text-3xl font-bold text-gray-900",
        "section": "text-xl font-semibold text-gray-900",
